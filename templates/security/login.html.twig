{% extends 'base.html.twig' %}

{% block title %}Connecte toi{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-3 font-weight-normal text-center text-light bg-dark p-3">Connecte toi:</h1>
        </div>
        <div class="offset-3 col-6 mb-3">
            <label for="inputEmail"></label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div class="offset-3 col-6">
            <label for="inputPassword" class="text-light"></label>
            <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        </div>
    </div>
        <div class="row">
            <div class="offset-3 col-12">
                <div class="checkbox mb-3 col-3">
                    <label class="text-light">
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                <div class="col-6 text-center">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Go !
                    </button>
                </div>
            </div>
        </div>
</form>
{% endblock %}
